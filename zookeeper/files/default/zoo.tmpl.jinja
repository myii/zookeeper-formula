tickTime={{ zookeeper.zookeeperproperties.tickTime }}
dataDir={{ zookeeper.zookeeperproperties.dataDir }}
initLimit={{ zookeeper.zookeeperproperties.initLimit }}
syncLimit={{ zookeeper.zookeeperproperties.syncLimit }}
4lw.commands.whitelist={{ zookeeper.zookeeperproperties['4lw.commands.whitelist'] }}
{%- if ['zookeeper.zookeeperproperties.clientPort'] %}
clientPort={{ zookeeper.zookeeperproperties.clientPort }}
{%- endif %}
{%- if ['zookeeper.zookeeperproperties.customservers'] %}
{%- for nodes, args in zookeeper.zookeeperproperties['customservers'].items() %}
server.{{ args.zookeeper_myid }}={{ args.hostname }}:{{ args.zookeeper_peerPorts }}
{%- endfor %}
{% endif %}
